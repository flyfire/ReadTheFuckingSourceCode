<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="raw"/>

    <Button
        android:id="@+id/withjson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="withjson"
        app:layout_constraintCircle="@id/raw"
        app:layout_constraintCircleAngle="45"
        app:layout_constraintCircleRadius="100dp"/>
    <Button
        android:id="@+id/withrxjava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="withrxjava"
        app:layout_constraintCircle="@id/raw"
        app:layout_constraintCircleAngle="135"
        app:layout_constraintCircleRadius="100dp"/>
    <Button
        android:id="@+id/withall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="withall"
        app:layout_constraintCircle="@id/raw"
        app:layout_constraintCircleAngle="225"
        app:layout_constraintCircleRadius="100dp"/>
    <Button
        android:id="@+id/servicemethod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="servicemethod"
        app:layout_constraintCircle="@id/raw"
        app:layout_constraintCircleAngle="315"
        app:layout_constraintCircleRadius="100dp"/>
</android.support.constraint.ConstraintLayout>